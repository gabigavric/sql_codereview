<h1><%= @project.title() %></h1>
  <% if @project.volunteers.any? %>

      <h3>Volunteers:</h3>
      <ul>
        <% @project.volunteers.each do |volunteer| %>
            <li><%= volunteer.name %></li>
        <% end %>
      </ul>
  <% end %>

<form action="/projects/<%= @project.id %>/delete" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete Project</button>
</form>

<h3>Edit Project:</h3>

<form action="/projects/<%= @project.id %>/edit" method="post">
  <label for="title">Rename this project:</label>
  <input name="title" type="text">
  <button type="submit">Update Project</button>
</form>

<form action="/projects/<%= @project.id %>/volunteers" method="post">
  <div class="form-group">
    <label for="name">Add a volunteer: </label>
    <input name="name" id="name"  class="form-control" type="text">
    <button type="submit">Add</button>
  </div>
</form>
<br>
<div class="container">
  <a href="/"><button class="btn">Return Home</button></a>
</div>